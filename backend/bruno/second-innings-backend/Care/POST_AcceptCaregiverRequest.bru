meta {
  name: POST_AcceptCaregiverRequest
  type: http
  seq: 9
}

post {
  url: {{baseUrl}}{{apiPrefix}}/me/accept-caregiver-request
  body: json
  auth: bearer
}

auth:bearer {
  token: {{familyToken}}
}

body:json {
  {
    "request_id": 1
  }
}

tests {
  test("Status code is 200 for successful caregiver request acceptance or 404 for not found", function() {
    const status = res.getStatus();
    expect([200, 404]).to.include(status);
  });

  test("Response has appropriate message", function() {
    const status = res.getStatus();
    if (status === 200) {
      expect(res.getBody().message).to.contain("successfully");
    } else if (status === 404) {
      expect(res.getBody().message).to.contain("not found");
    }
  });
}
